<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Tailwind CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <!-- Flowbite (optional, not required here) -->
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-gray-900 min-h-screen">

    <!-- Top bar -->
    <div class="flex items-center justify-between p-4">
      <div class="text-white font-bold">My Drive</div>
      <div class="flex items-center gap-3">
        <div class="text-gray-300">Signed in as <span class="font-medium text-white">User</span></div>
        <div class="w-9 h-9 bg-gray-700 rounded-full"></div>
      </div>
    </div>

    <!-- Main content -->
    <div class="flex items-start gap-8 px-10">
      <div class="flex-1">
        <!-- Action bar -->
        <div class="flex items-center gap-4 mb-6">
          <button id="manualUploadBtn" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">
            Upload file
          </button>
        </div>

        <!-- Dropzone -->
        <div class="flex items-center justify-center">
          <label
            for="dropzone-file"
            class="flex flex-col items-center justify-center w-[600px] h-[320px]
                   border-2 border-dashed border-gray-600
                   rounded-lg cursor-pointer
                   bg-gray-800 hover:bg-gray-700
                   text-gray-300 transition"
          >
            <svg
              class="w-12 h-12 mb-4"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 16v-8m0 0-3 3m3-3 3 3M20 16a4 4 0 00-4-4h-1a5 5 0 00-10 0H4a4 4 0 000 8h16a4 4 0 000-8z"
              />
            </svg>

            <p class="mb-2 text-lg">
              <span class="font-semibold">Click to upload</span> or drag and drop
            </p>
            <p class="text-sm text-gray-400">
              SVG, PNG, JPG, GIF or other files (MAX. 10MB)
            </p>

n            <input id="dropzone-file" type="file" name="file" class="hidden" accept="image/*,application/pdf" />
          </label>
        </div>

        <!-- Progress -->
        <div id="uploadProgress" class="w-full mt-4 hidden">
          <div class="w-full bg-gray-700 rounded h-2 overflow-hidden">
            <div id="progressBar" class="bg-blue-500 h-2 w-0 transition-width"></div>
          </div>
        </div>

n        <!-- Uploaded files grid -->
        <div id="fileGrid" class="grid grid-cols-3 gap-4 mt-6"></div>
      </div>

n      <!-- Right column (can show details or placeholders) -->
      <div class="w-72">
        <div class="bg-gray-800 rounded p-4 text-gray-300">
          <div class="font-semibold text-white mb-2">Storage</div>
          <div class="text-sm">Used 1.2 GB of 15 GB</div>
          <div class="w-full bg-gray-700 rounded h-2 mt-3 overflow-hidden">
            <div class="bg-blue-600 h-2 w-20%"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Preview box bottom-right -->
    <div id="previewBox" class="fixed bottom-6 right-6 w-48 h-28 bg-gray-800 rounded hidden overflow-hidden shadow-lg"></div>

n    <script src="/js/upload.js" defer></script>
  </body>
</html>
